<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lqh.admin.mapper.ArticleMapper">
    <!-- 条件查询 -->
    <select id="findByPage" parameterType="Article" resultType="Article">
        SELECT * FROM tb_article WHERE 1=1
        <if test="title != null">
            AND title LIKE CONCAT('%', #{title}, '%')
        </if>
        ORDER BY id DESC
    </select>

    <!-- 保存 -->
    <insert id="save" parameterType="Article">
        INSERT ignore INTO
            tb_article(
            title,
            title_pic,
            author,
            content,
            content_md,
            origin,
            state,
            publish_time,
            edit_time,
            create_time
        )
        VALUES(
                  #{title},
                  #{titlePic},
                  #{author},
                  #{content},
                  #{contentMd},
                  #{origin},
                  #{state},
                  #{publishTime},
                  #{editTime},
                  #{createTime}
              )
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="Article">
        UPDATE tb_article
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="titlePic != null">
                title_pic = #{titlePic},
            </if>
            <if test="author != null">
                author = #{author},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="contentMd != null">
                content_md = #{contentMd},
            </if>
            <if test="origin != null">
                origin = #{origin},
            </if>
            <if test="state != null">
                state = #{state},
            </if>
            <if test="publishTime != null">
                publish_time = #{publishTime},
            </if>
            <if test="editTime != null">
                edit_time = #{editTime},
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>