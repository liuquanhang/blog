<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lqh.admin.mapper.CommentsMapper">

    <!-- 条件查询 -->
    <select id="findByPage" parameterType="com.lqh.admin.entity.Comments" resultType="com.lqh.admin.entity.Comments">
        SELECT * FROM tb_comments
        WHERE 1=1
        <if test="author != null">
            AND author LIKE CONCAT('%', #{author}, '%')
        </if>
    </select>

    <!-- 查询所有评论信息列表 -->
    <select id="findCommentsList" resultType="com.lqh.admin.entity.Comments">
        SELECT * FROM tb_comments WHERE 1=1
        <if test="articleId != 0">
            AND article_id = #{articleId}
        </if>
        AND sort = #{sort}
    </select>

    <!-- 查询所有父级文章留言信息 -->
    <select id="findAllId" resultType="com.lqh.admin.entity.Comments">
        SELECT * FROM tb_comments WHERE p_id = 0 AND c_id = 0
        <if test="articleId != 0">
            AND article_id = #{articleId}
        </if>
        AND sort = #{sort}
    </select>

    <!-- 保存 -->
    <insert id="save" parameterType="com.lqh.admin.entity.Comments">
        INSERT  INTO
            tb_comments(
            p_id,
            c_id,
            article_title,
            article_id,
            author,
            author_id,
            email,
            content,
            time,
            url,
            sort,
            state
        )
        VALUES(
                  #{pId},
                  #{cId},
                  #{articleTitle},
                  #{articleId},
                  #{author},
                  #{authorId},
                  #{email},
                  #{content},
                  #{time},
                  #{url},
                  #{sort},
                  #{state}
              )
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.lqh.admin.entity.Comments">
        UPDATE ignore tb_comments
        <set>
            <if test="pId != null">
                p_id = #{pId},
            </if>
            <if test="cId != null">
                c_id = #{cId},
            </if>
            <if test="articleTitle != null">
                article_title = #{articleTitle},
            </if>
            <if test="articleId != null and articleId != 0">
                article_id = #{articleId},
            </if>
            <if test="author != null">
                author = #{author},
            </if>
            <if test="authorId != null">
                authorId = #{authorId},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="state != null">
                state = #{state}
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>